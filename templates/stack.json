{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources" : {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "mattandre.ws",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "DependsOn": "Bucket",
      "Properties": {
        "Bucket" : { "Fn::Join": [ "", [ { "Ref": "AWS::StackName" }, "-", { "Ref": "AWS::Region" } ] ] },
        "PolicyDocument": {
          "Statement": [{
            "Effect": "Allow",
            "Principal": {
              "AWS": { "Fn::Join": [ "", [ "arn:aws:iam::", { "Ref": "AWS::AccountId" }, ":user/DeployUserFor_", { "Ref": "AWS::StackName" } ] ] }
            },
            "Action": "s3:*",
            "Resource": [
              { "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "AWS::StackName" }, "-", { "Ref": "AWS::Region" }, "/*" ] ] },
              { "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "AWS::StackName" }, "-", { "Ref": "AWS::Region" } ] ] }
             ]
          }]
        }
      }
    }
  }
}

