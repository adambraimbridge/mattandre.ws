@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

body
  font-size: font-size

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#main
  @media mq-normal
    column(9)

#sidebar
  @media mq-normal
    column(3)

@import "_extend"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/highlight"
